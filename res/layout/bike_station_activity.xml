<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
>

  <TabHost android:id="@+id/TabHost01" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TabWidget android:id="@android:id/tabs" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <FrameLayout android:id="@android:id/tabcontent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="65px">
      <!-- TAB one - informative -->
      <RelativeLayout
          android:id="@+id/tab1Layout" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" >
          
          <TextView
              android:id="@+id/tab_inf_station_name_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:text="StationName: FAKENAME" />

          <TextView
              android:id="@+id/tab_inf_station_id_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tab_inf_station_name_text"
              android:text="StationId : FAKEID" />

          <ListView
              android:id="@+id/tab_inf_listview"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tab_inf_station_id_text"
               />
          
      </RelativeLayout>
      
      <!-- Tab two logistical -->
   <RelativeLayout
          android:id="@+id/tab2Layout" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" >
          
          <TextView
              android:id="@+id/tab_log_station_name_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:text="StationName: FAKENAME" />

          <TextView
              android:id="@+id/tab_log_station_id_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tab_log_station_name_text"
              android:text="StationId : FAKEID" />

          <ListView
              android:id="@+id/tab_log_listview"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
               android:layout_below="@+id/tab_log_station_id_text"
               />
          
      </RelativeLayout>
      
      <!-- Tab three service -->
   <RelativeLayout
          android:id="@+id/tab3Layout" 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" >
          
          <TextView
              android:id="@+id/tab_ser_station_name_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:text="StationName: FAKENAME" />

          <TextView
              android:id="@+id/tab_ser_station_id_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tab_ser_station_name_text"
              android:text="StationId : FAKEID" />

          <ListView
              android:id="@+id/tab_ser_listview"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
               android:layout_below="@+id/tab_ser_station_id_text"
               />
          
      </RelativeLayout>
      
    </FrameLayout>
  </TabHost>
</LinearLayout>